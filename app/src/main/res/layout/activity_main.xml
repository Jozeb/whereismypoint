<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamfegit.wheresmypoint.MainActivity">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/logo" />
    <TextView
        android:id="@+id/text_appversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="V2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:orientation="horizontal"
        android:padding="@dimen/padding_inside">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Point"
            android:textSize="@dimen/text_size1" />

        <Spinner
            android:id="@+id/spin_pointnumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/points"
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_size1" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_go"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/padding_margin"
        android:layout_marginRight="@dimen/padding_margin"
        android:layout_marginTop="@dimen/padding_inside"
        android:text="GO!"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:background="@drawable/btn_green_selector" />

    <Button
        android:id="@+id/btn_predict"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/padding_margin"
        android:layout_marginRight="@dimen/padding_margin"
        android:layout_marginTop="@dimen/padding_inside"
        android:text="Predict"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:background="@drawable/btn_green_selector" />

    <Button

        android:id="@+id/btn_participate"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/padding_margin_small"
        android:layout_marginRight="@dimen/padding_margin_small"
        android:layout_marginTop="@dimen/padding_inside"
        android:text="Participate!"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:background="@drawable/btn_normal_selector" />


</LinearLayout>
