<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamfegit.wheresmypoint.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo"/>

    <EditText
        android:id="@+id/edit_nuid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:maxLength="6"
        android:hint="14xxxx"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_inside"

        android:textSize="@dimen/text_size1" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="@dimen/padding_inside"
        android:textSize="@dimen/text_size1" />

    <EditText
        android:id="@+id/edit_re_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:hint="Re-type Password"
        android:inputType="textPassword"
        android:padding="@dimen/padding_inside"
        android:textSize="@dimen/text_size1" />

    <EditText
        android:id="@+id/edit_phonenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:hint="03xxXXXXXXX (optional)"
        android:maxLength="13"
        android:inputType="numberDecimal"
        android:padding="@dimen/padding_inside"
        android:textSize="@dimen/text_size1" />

    <TextView
        android:id="@+id/text_home_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:padding="@dimen/padding_inside"
        android:maxLines="1"
        android:text="Tap to add Home Location"
        android:textSize="@dimen/text_size1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_inside"
        android:background="@drawable/editbox1"
        android:orientation="horizontal"
        android:padding="@dimen/padding_inside">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Point Number"
            android:textSize="@dimen/text_size1" />

        <Spinner
            android:id="@+id/spin_pointnumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/points"
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_size1" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/padding_margin"
        android:layout_marginRight="@dimen/padding_margin"
        android:layout_marginTop="@dimen/padding_inside"
        android:text="Register"
        android:textColor="#ffffff"
        android:textSize="19sp"
        android:background="@drawable/btn_green_selector" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/padding_margin"
        android:layout_marginRight="@dimen/padding_margin"
        android:layout_marginTop="@dimen/padding_inside"
        android:background="@drawable/btn_cancel_selector" />

</LinearLayout>
